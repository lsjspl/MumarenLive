<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000"/> <!-- 80%透明度的黑色背景 -->
                </shape>
            </item>

            <!-- Bottom stroke shape -->
            <item android:bottom="2dp" android:top="-3dp"
                  android:right="-3dp"
                  android:left="-3dp">
                <shape android:shape="rectangle" >
                    <solid android:color="@android:color/transparent"/> <!-- 透明填充，只保留描边 -->
                    <stroke android:width="2dp" android:color="#FFD54F"/> <!-- 描边为1dp的白色 -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000"/> <!-- 80%透明度的黑色背景 -->
                </shape>
            </item>

            <!-- Bottom stroke shape -->
            <item android:bottom="1dp"  android:top="-3dp"
                  android:right="-3dp"
                  android:left="-3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/> <!-- 透明填充，只保留描边 -->
                    <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- 描边为1dp的白色 -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>