<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Light gray background color when pressed -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFC107"/> <!-- Light yellow background color when focused -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background color by default -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
        </shape>
    </item>
</selector>